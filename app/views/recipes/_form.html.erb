<%= form_with(model: recipe, local: true) do |form| %>
  <% if recipe.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(recipe.errors.count, "error") %> prohibieron guardar esta receta:</h4>
      <ul>
        <% recipe.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, "Título", class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :cook_time, "Tiempo de cocción (minutos)", class: "form-label" %>
    <%= form.number_field :cook_time, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :difficulty, "Dificultad", class: "form-label" %>
    <%= form.select :difficulty, ["Fácil", "Medio", "Difícil"], { include_blank: "Selecciona dificultad" }, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :instructions, "Instrucciones", class: "form-label" %>
    <%= form.rich_text_area :instructions, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "Guardar Receta", class: "btn btn-success" %>
    <%= link_to "Cancelar", recipes_path, class: "btn btn-secondary" %>
  </div>
<% end %>